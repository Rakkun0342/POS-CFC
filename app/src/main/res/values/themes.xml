<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DrinkCourt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/ibis_rose</item>
        <item name="colorPrimaryVariant">@color/pastel_magenta</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ibis_rose</item>
        <item name="colorSecondaryVariant">@color/pastel_magenta</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/proxima_nova_font</item>
        <item name="fontFamily">@font/proxima_nova_font</item>
    </style>

    <style name="Theme.DrinkCourt" parent="Base.Theme.DrinkCourt" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="SearchView" parent="">
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>